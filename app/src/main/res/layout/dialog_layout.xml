<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="12dp"
    android:background="@drawable/dialog_shape"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/on_off_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/off_view"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you Sure want to \n log out?"
        android:layout_below="@id/off_view"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/spartanmedium500"
        android:layout_marginTop="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/no_btn"
            android:layout_weight="1"
            android:text="No"
            android:gravity="center"
            android:fontFamily="@font/spartanmedium500"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/dialog_design_btn"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:id="@+id/yes_btn"
            android:gravity="center"
            android:text="Yes"
            android:layout_margin="10dp"
            android:fontFamily="@font/spartanmedium500"
            android:textColor="@color/white"
            android:background="@drawable/dialog_button_design"
            android:textSize="16sp"
            android:textStyle="bold"
            />


    </LinearLayout>


</RelativeLayout>